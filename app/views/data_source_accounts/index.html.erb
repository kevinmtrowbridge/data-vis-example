<p id="notice"><%= notice %></p>

<h1>Listing Data Source Accounts</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Password</th>
      <th>Data source</th>
      <th>User</th>
      <th>Workspace</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @data_source_accounts.each do |data_source_account| %>
      <tr>
        <td><%= data_source_account.id %></td>
        <td><%= data_source_account.password %></td>
        <td><%= data_source_account.data_source_id %></td>
        <td><%= data_source_account.user_id %></td>
        <td><%= data_source_account.workspace_id %></td>
        <td><%= link_to 'Show', data_source_account %></td>
        <td><%= link_to 'Edit', edit_data_source_account_path(data_source_account) %></td>
        <td><%= link_to 'Destroy', data_source_account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

